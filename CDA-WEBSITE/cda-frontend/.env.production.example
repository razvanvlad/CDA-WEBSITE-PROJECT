# Production Environment Variables Template
# Copy this to .env.production.local for production builds
# Or set these variables in your hosting platform (Vercel, Netlify, etc.)

# GraphQL revalidation (1 hour for production)
NEXT_PUBLIC_GRAPHQL_REVALIDATE=3600

# Production site URL
NEXT_PUBLIC_SITE_URL=https://cda-frontend-nine.vercel.app

# Production WordPress URLs
NEXT_PUBLIC_WORDPRESS_URL=https://cdanewwebsite.wpenginepowered.com
NEXT_PUBLIC_WORDPRESS_GRAPHQL_ENDPOINT=https://cdanewwebsite.wpenginepowered.com/graphql

# Page IDs (should match your WordPress production setup)
NEXT_PUBLIC_HOMEPAGE_ID=2
NEXT_PUBLIC_ABOUT_PAGE_ID=317
NEXT_PUBLIC_CONTACT_PAGE_ID=791

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXX-X
GOOGLE_TAG_MANAGER_ID=GTM-XXXX

# Contact form (optional)
CONTACT_FORM_EMAIL=contact@your-domain.com
